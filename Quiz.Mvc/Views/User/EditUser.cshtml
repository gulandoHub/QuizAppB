@model QuizMvc.Models.UserData
@{
    ViewData["Title"] = ViewBag.CreateMode ? "Create" : "Edit";
    Layout = "_Layout";
}

<script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
<script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")"></script>
<script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")"></script>


<form asp-action="@(ViewBag.CreateMode ? "Create" : "Edit")" method="post">
    <div class="form-group">
        <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control"/>
        
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control"/>
        
        <div><span asp-validation-for="Username" class="text-danger"></span></div>
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control"/>
        
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>