@model IEnumerable<QuizData.QuestionTypeSummary>
@{
    ViewData["Title"] = "Question Types";
    Layout = "_Layout";
}
<table class="table table-sm table-striped">
    <thead>
    <tr><th>Quiz Name</th><th>Question Type Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var questionType in Model) {
        <tr>
            <td>@questionType.QuizName</td>
            <td>@questionType.QuestionTypeName</td>
            <td>
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit"
                       class="btn btn-sm btn-warning" asp-route-id="@questionType.ID">
                        Edit
                    </a>
                    <input type="hidden" name="id" value="@questionType.ID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Create New Question Type</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go To Home</a>
</div>